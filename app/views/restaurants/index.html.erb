<div class="container">
  <h1>Listes des restaurants :</h1>

  <div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-xs-12 col-md-4 col-lg-3 card">
      <%= link_to restaurant_path(restaurant) do %>
        <h3><%= restaurant.name %> :</h3>
        <p><%= restaurant.address %></p>
      <% end %>
    </div>
  <% end %>
  </div>

</div>
